@model CreateCategoryDTO 
<div class="row">
    <div class="card col-md-8 offset-2 mt-5">
        <div class="card-body">
            <div class="card-text"> <h3>Kategori Ekleme Paneli</h3></div>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input  asp-for="Name" class="form-control" type="text"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input value="Oluştur" class="btn btn-info" type="submit" />
                </div>
            </form>
        </div>
    </div>
</div>