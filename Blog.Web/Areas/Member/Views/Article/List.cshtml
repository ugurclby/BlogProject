


@model List<GetArticleDTO>

    <div class="row">
        <div class="card col-md-8 offset-2">
            <div class="card-text"><h4>Makale Listesi</h4></div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>TİTLE</th>
                            <th>IMAGE</th>
                            <th>CATEGORYNAME</th>
                            <th>OPERATIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                       {
                           <tr>
                               <td>@item.Title</td>
                               <td><img src="@item.ImagePath" /></td>
                               <td>@item.CategoryName</td>
                               <td>
                                   <a asp-action="Update" asp-route-id="@item.ArticleID" class="btn btn-success">Güncelle</a>
                                   <a asp-action="Detail" asp-route-id="@item.ArticleID" class="btn btn-info">Detay</a>
                                   <a asp-action="Delete" asp-route-id="@item.ArticleID" class="btn btn-danger">Sil</a>
                               </td>
                           </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>