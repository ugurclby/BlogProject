@model List<GetArticleDTO>
<div class="card col-md-8 offset-2 mt-5">
    <div class="card-body">
        <div class="card-text"><h3>Makale Listesi</h3></div>
        <p>
            <a asp-action="Create" class="btn btn-primary">Yeni Makale Ekle</a>
        </p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>TİTLE</th>
                <th>IMAGE</th>
                <th>CATEGORYNAME</th>
                <th>OPERATIONS</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td><img src="@item.ImagePath"/></td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.ArticleID" class="btn btn-success">Güncelle</a>
                        <a asp-action="Detail" asp-route-id="@item.ArticleID" class="btn btn-info">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.ArticleID" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div> 