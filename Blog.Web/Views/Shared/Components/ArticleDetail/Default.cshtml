@using System.Linq
@model Article
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">Yayınlanma Tarihi , @Model.CreatedDate.ToShortDateString()</div>
                    <!-- Post categories-->
                    @foreach (var category in Model.ArticleCategories.Select(x => x.Category))
                    {
                        <a class="badge bg-secondary text-decoration-none link-light" href="#!">@category.Name</a>
                    }
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4"><img class="img-fluid rounded" src="@Model.ImagePath" alt="..." /></figure>
                <!-- Post content-->
                <section class="mb-5">
                    <p class="fs-5 mb-4">@Model.Content</p>
                </section>
                
            </article> 
            <section class="mb-3">
                <form method="post" asp-action="AddToLike" class="mb-4">
                    <input type="hidden" name="AppUserID" value="@Model.AppUserID" />
                    <input type="hidden" name="ArticleID" value="@Model.ID" />
                    @if (Model.Likes.Any(x => x.AppUserID == Model.AppUserID))
                    {
                        <input type="hidden" name="Type" value="Vazgeç"/>
                        <button type="submit" class="btn btn-warning">Vazgeç
                            <span class="badge badge-dark badge-pill">@Model.Likes.Count</span>
                        </button>
                    }
                    else
                    {
                        <text>
                            <input type="hidden" name="Type" value="Beğen"/>
                            <button type="submit" class="btn btn-danger">
                                Beğen <span class="badge badge-dark badge-pill">@Model.Likes.Count</span>
                            </button>
                        </text>
                    }
                </form>
            </section>
            <!-- Comments section-->
            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        <!-- Comment form-->
                        <form method="post" asp-action="AddToComment" class="mb-4">
                            <div class="form-group">
                                <textarea name="Text" class="form-control" rows="4" placeholder="Yorum Yaz.."></textarea>
                                <input type="hidden" name="AppUserID" value="@Model.AppUserID" />
                                <input type="hidden" name="ArticleID" value="@Model.ID" />
                            </div>
                            <div class="form-group mt-2">
                                <input type="submit" class="btn btn-success" value="Gönder" />
                            </div>
                        </form>

                        @foreach (var comment in Model.Comments)
                        {
                            <div class="d-flex">
                                <div class="ms-3">
                                    <div class="fw-bold">@comment.Appuser.FullName</div>
                                    @comment.Text
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>

    </div>
</div>