@model List<GetArticleWithUser>  
    @foreach (var item in Model)
    {
        <div class="card mb-4">
            <img src="@item.ImagePath" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Content.Substring(0,100)</p>
                <p class="card-text">devamını okumak için <a asp-action="Detail" asp-route-id="@item.ArticleId">tıklayınız..</a></p>
                <p class="card-text"><small class="text-muted">Oluşma Tarihi : @item.CreatedDate.ToShortDateString()</small></p>
                <a class="btn btn-outline-info" asp-action="Detail" asp-controller="" asp-area="" asp-route-id="@item.AppUserId">Yazar : @item.UserFullName</a>
            </div>
        </div> 
    } 
