@model Appuser
<div class="card col-md-8 offset-2 mt-5">
    <div class="card-body">
        <div class="card-text">
            <h3>Yazar Bilgileri</h3>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input type="text" class="form-control" asp-for="FirstName" disabled="disabled" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" asp-for="LastName" disabled="disabled" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="text" class="form-control" asp-for="Email" disabled="disabled" />
        </div>
        <div class="form-group">
            <label asp-for="ImagePath"></label>
            <img src="@Model.ImagePath" asp-append-version="true" />
        </div> 
    </div> 
</div>